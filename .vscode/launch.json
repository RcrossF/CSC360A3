    "version": "0.2.0",
    "configurations": [
        {
            "name": "Diskinfo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/diskinfo",
            "args": [
                "disk.IMA"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Make",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
